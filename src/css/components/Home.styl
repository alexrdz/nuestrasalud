.image-bg
  background-image: url('/img/bg-kids-bw.jpg')
  background-attachment: fixed
  background-position: center top
  background-repeat: no-repeat
  background-size: cover
  position: fixed
  left: 0
  right: 0
  bottom: 0
  top: 0
  height: 100vh
  width: 100%


.overlay
  opacity: 0.4
  background: #8B2F28
  background-image: linear-gradient(-45deg, rgba(255,255,255,0.00) 50%, #FEFEFE 100%)
  opacity: 0.7
  background-image: linear-gradient(-43deg, #8B2F28 0%, #9A9DA8 61%, #A4E5FB 100%)
  background-attachment: fixed
  

  position: fixed
  left: 0
  right: 0
  bottom: 0
  top: 0
  height: 100vh
  width: 100%


.Header
  margin: 1em auto 0
  position: relative
  &:after
    clear: both
    content: ''
    display: block


.Brand
  float: left
  +below(820px)
    width: 80%
    float: none
    margin: 0 auto

.Services
  float: right
  +below(820px)
    display: none


p
  color: #CEC1C3
  font-size: 12px
  +below(820px)
    color: #fff
    line-height: 1.5


main.Content
  margin-top: 3.5em

h1
  font-size: 38px
  font-weight: 300

h2
  font-size: 22px
  font-weight: 700
  letter-spacing: 1.4px

h3
  font-size: 20px
  font-weight: 100
  opacity: 0.8

.Cell
  padding: 0
